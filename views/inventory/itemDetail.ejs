<main>
  <%- itemHTML %>
  <a href="/inv/type/<%= item.classification_id %>" class="btn">Return to Inventory</a>
   <%- messages() %>

  <p>Average Rating - <%= averageRating %> ⭐</p>

 <form id="rating" action="/rating/submit" method="post">
    <input type="hidden" name="vehicle_id" value="<%= item.inv_id %>">
    <label for="rating">Rating:</label>
    <select title="ratingValue" name="rating_value" required>
    <option value="1">1 ⭐</option>
    <option value="2">2 ⭐⭐</option>
    <option value="3">3 ⭐⭐⭐</option>
    <option value="4">4 ⭐⭐⭐⭐</option>
    <option value="5">5 ⭐⭐⭐⭐⭐</option>
    </select>
    <button type="submit">Enviar</button>
  </form>
</main>